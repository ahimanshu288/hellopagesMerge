<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/first_location_finder_screen_background">

    <TextView
        android:id="@+id/textView_a_knowlarity_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/a_knowlarity_product"
        android:textColor="@color/a_knowlarity_product_text_color"
        android:textSize="@dimen/a_knowlarity_product_text_size" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/logo"/>

    <ProgressBar
        android:id="@+id/progressBar_splash"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@anim/my_wheel"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/textView_tracking_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Tracking Location"
        android:textColor="@color/a_knowlarity_product_text_color"
        android:textSize="14sp" />

</RelativeLayout>